{{!< layout}}

<div class="module grid">
	<header class="main-header clearfix">
		<h1> My Badges</h1>
		<nav class="nav user-nav clearfix">
			<ul>
				<li><a class="btn btn-menu" href="/account/{{userDetails.username}}">My Account</a></li>
				<li><a class="active btn btn-menu" href="/account/{{userDetails.username}}/badges">My Badges</a></li>
			</ul>
		</nav>
	</header>


	<div class="main module">
		<div class="userbox-inner module clearfix">
			<div class="badges-wrapper">
				{{#each awards}}
					<div class="badge-item col-1-3">
						<h3>{{name}}</h3>
						<img class="badge" src="{{src}}" alt="{{name}}">
						<p class="badge-date">{{badge.date}}</p>

					</div>
				{{/each}}
			</div>
		</div>
	</div>
</div>
